<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="statDetail"
                type="com.foxsports.nrlapp.playerdetail.ui.StatUiModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/content_margin"
            tools:context=".playerdetail.ui.PlayerDetailFragment">

        <TextView
                android:id="@+id/textStatName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:statType="@{statDetail.statName}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextDetail"
                tools:text="Errors"/>

        <TextView
                android:id="@+id/textStatValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{Integer.toString(statDetail.statValue)}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/textStatName"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="end"
                style="@style/TextDetail"
                tools:text="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
