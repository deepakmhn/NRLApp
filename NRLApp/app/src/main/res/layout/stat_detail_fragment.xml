<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
                name="statDetail"
                type="com.foxsports.nrlapp.topplayerstats.ui.statdetail.StatDetailUiModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".topplayerstats.ui.statdetail.StatDetailFragment">

        <TextView
                android:id="@+id/textStatType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:statType="@{statDetail.statType}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="center_horizontal"
                style="@style/TextTitle"
                tools:text="Tackles"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topStatComparisonRv"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintTop_toBottomOf="@id/textStatType"
                app:layout_constraintBottom_toBottomOf="parent"
                app:teamAPlayers="@{statDetail.teamATopPlayers}"
                app:teamBPlayers="@{statDetail.teamBTopPlayers}"
                android:indeterminate="true"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>